{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "LmStudio": {
    "BaseUrl": "http://127.0.0.1:1234",
    "RequestTimeoutSeconds": 120
  },
  "Security": {
    "JwtIssuer": "aigs-dev",
    "JwtAudience": "aigs-users-dev",
    "JwtKey": "development-jwt-key-not-for-production",
    "CookieName": "access_token",
    "CsrfHeader": "X-CSRF-Token"
  },
  "Limits": {
    "MaxConcurrentPerModel": 2,
    "MaxActiveStreamsPerUser": 2,
    "MaxRequestBodyKB": 64
  },
  "RateLimiting": {
    "PermitPerMinutePerUser": 120
  },
  "Database": {
    "Provider": "sqlite",
    "ConnectionString": "Data Source=./data/gateway-dev.db"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:3000",
      "https://gateway.local"
    ]
  }
}
