{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "LmStudio": {
    "BaseUrl": "http://127.0.0.1:1234",
    "RequestTimeoutSeconds": 120
  },
  "Security": {
    "JwtIssuer": "aigs",
    "JwtAudience": "aigs-users",
    "JwtKey": "CHANGE-THIS-TO-A-SECURE-RANDOM-KEY-IN-PRODUCTION",
    "CookieName": "access_token",
    "CsrfHeader": "X-CSRF-Token"
  },
  "Limits": {
    "MaxConcurrentPerModel": 4,
    "MaxActiveStreamsPerUser": 3,
    "MaxRequestBodyKB": 128
  },
  "RateLimiting": {
    "PermitPerMinutePerUser": 60
  },
  "Database": {
    "Provider": "postgresql",
    "ConnectionString": "Host=localhost;Database=aigs;Username=postgres;Password=password"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://gateway.local"
    ]
  }
}
